<form class="single-code-form" {{action 'update' this on='submit'}}>

	<div class="col-side">

		<!-- Scrollable section -->
		<div class="scrollable">

			<div class="header-tools editing">
				<div title="Save" class="save-btn" {{action 'update' this}}>
					<span>Save {{name}}</span>
				</div>
			</div>

			<div class="padded">
				<h1>
					{{name}}
				</h1>
				<div>
					{{input type="text" name="name" value=name}}
				</div>

				<div>
					<h3>Description</h3>
					<span>* Markdown supported</span>
					{{textarea value=description name="description"}}
					{{#if description}}
					<p class="description">
						{{markdown description}}
					</p>
					{{/if}}

				</div>

				{{#if languages}}
				<div class="col-2">
					<h3>Languages</h3>
					{{view Ember.Select 
						content=languages
						selection=language
						optionValuePath="content.id"
						optionLabelPath="content.name"
						size=languages.length
					}}
				</div>
				{{/if}}

				{{#if collections}}
				<div class="col-2">
					<h3>Collections</h3>
					{{view Ember.Select 
						content=collections
						selection=collection
						optionValuePath="content.id"
						optionLabelPath="content.name"
						size=collections.length
					}}
				</div>
				{{/if}}

			</div>

		</div>
	
	</div>

	<div class="col-code">
		{{code-editor value=body}}
	</div>

</form>
